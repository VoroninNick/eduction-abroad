<div id="index-render-about-wrapper" class="articles-page clearfix">
  <div id="index-render-about" class="container">
    <div class="g12 alpha">
      <h2>Панель управления сайтом</h2>
    </div>
    <br class="clear">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="sin_in_fields"><%= f.label 'Логин:' %><br />
        <%= f.email_field :email, :autofocus => true %></div>

      <div class="sin_in_fields"><%= f.label 'Пароль:' %><br />
        <%= f.password_field :password %></div>

      <div class="sin_in_fields button"><%= f.submit 'Войти' %></div>

      <% if devise_mapping.rememberable? -%>
        <div class="sin_in_fields"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    <% end %>

  </div>
</div>
