    <div class="g12 alpha">
      <h2><%= link_to 'Публікації', article_path, :title => 'Публікації' %></h2>
    </div>
    <br class="clear">
    <% @last.each do |last_article| %>
      <div class="g6 ir-about-item <%= cycle('alpha', 'omega') %>">
        <div class="avatar">
          <%= link_to(image_tag(last_article.avatar.url(:retina), :alt => last_article.name), article_show_path(last_article), :title => last_article.name) %>
        </div>
        <div class="ai-description">
          <h3><%= link_to last_article.name, article_show_path(last_article), :title => last_article.name %></h3>
          <p><%= last_article.short_descr %></p>
        </div>
      </div><!-- Article item -->
    <% end %>
  </div>
</div>
