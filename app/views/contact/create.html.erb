<br class="clear">
<div id="contact-render" class="container">
  <div class="g12 alpha contact-heading tc">
    <h2><%= t('variables.contact_page.heading') %></h2>
    <p class="telephone tc margin"><%= link_to '+38 (098) 22 66 111', 'tel:+ +38 (098) 22 66 111', :title => '+38 (098) 22 66 111' %></p>
    <br class="clear">
    <p class="tc  pink"><%= t('variables.contact_page.or') %></p>
    <p class="tc margin mail-link"><%= mail_to 'i@education-abroad.com.ua' %></p>
    <br class="clear">
    <br>
    <p class="tc mail pink"><%= t('variables.contact_page.second_or') %></p>
  </div>
  <br class="clear">
  <div id="form-wrapper-contact">
    <%= form_for @contact, :url => contact_path do |form| %>
      <div class="g4 left-side alpha">
        <div class="row-input">
          <%= form.text_field :name, :placeholder => '' %>
          <%= form.label t('variables.contact_page.label_name') %>
        </div>
        <div class="row-input">
          <%= form.text_field :email, :placeholder => '' %>
          <%= form.label t('variables.contact_page.label_email') %>
        </div>
        <div class="row-input">
          <%= form.text_field :telephone, :placeholder => '' %>
          <%= form.label t('variables.contact_page.label_phone') %>
        </div>
      </div>
      <div class="g8 right-side omega">
        <div class="row-input">
          <%= form.text_area :body, :placeholder => '' %>
          <%= form.label t('variables.contact_page.label_text') %>
        </div>
        <%= form.submit t('variables.contact_page.submit'), :class => 'submit-button' %>
      </div>
    <% end %>
  </div>
</div>
